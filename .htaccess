php_value memory_limit 4000M
php_value post_max_size 3000M
php_value upload_max_filesize 2000M
RewriteEngine On
RewriteBase /
# Options -Indexes


# тут мы все запросы сначала отправляем в папку public
RewriteCond %{REQUEST_URI} /static/.*
RewriteRule static/(.*) public/static/$1 [QSA,L]

RewriteCond %{REQUEST_URI} /robots.txt
RewriteRule robots.txt public/robots.txt [QSA,L]

# если ни файла ни папки нет, значит мы переводим все на файл index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]


# при все этой красото пользователь ничего не должен видеть, у него пути менять в адресной строке не должны